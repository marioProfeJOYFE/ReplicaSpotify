<Page x:Class="ReplicaSpotify.MVVM.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReplicaSpotify.MVVM.View"
      mc:Ignorable="d" 
      DataContext="{StaticResource AppViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Border Margin="5"
            Background="{StaticResource BrushSideBackground}"
            CornerRadius="15"
            Padding="10"
            BorderBrush="{StaticResource BrushSideBackground}"
            BorderThickness="2">
       <ScrollViewer>
        <StackPanel>
            <ItemsControl 
                ItemsSource="{Binding ListAlbums}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Width="350"
                            Margin="10"
                            Background="{StaticResource BrushPanel}"
                            CornerRadius="10"
                            BorderBrush="{StaticResource BrushSideBackground}"
                            BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                
                                <Image Source="{Binding CoverUrl}"
                                       Width="40"
                                       Height="40"
                                       Margin="0,0,10,0"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                                Foreground="{StaticResource BrushTextPrimary}"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer> 
    </Border>
    
</Page>
