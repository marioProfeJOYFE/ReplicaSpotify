<Page x:Class="ReplicaSpotify.MVVM.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReplicaSpotify.MVVM.View"
      mc:Ignorable="d" 
      DataContext="{StaticResource AppViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Border Margin="5"
            Background="{StaticResource BrushSideBackground}"
            CornerRadius="15"
            Padding="10"
            BorderBrush="{StaticResource BrushSideBackground}"
            BorderThickness="2">
       <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
                <TextBlock Text="Álbumes"
                       Foreground="{StaticResource BrushTextPrimary}"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="5,0,0,10"/>
                <ItemsControl 
                ItemsSource="{Binding ListAlbums}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Width="350"
                            Margin="10"
                            Background="{StaticResource BrushPanel}"
                            CornerRadius="10"
                            BorderBrush="{StaticResource BrushSideBackground}"
                            BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                
                                <Image Source="{Binding CoverUrl}"
                                       Width="40"
                                       Height="40"
                                       Margin="0,0,10,0"/>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                                Foreground="{StaticResource BrushTextPrimary}"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

                <TextBlock Text="Artistas"
                           Foreground="{StaticResource BrushTextPrimary}"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="5,0,0,10"/>
                <ItemsControl ItemsSource="{Binding ListArtists}"
                              Foreground="{StaticResource BrushTextPrimary}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <StackPanel Margin="10,0,0,0">
                                <Image Source="{Binding ProfilePicUrl}"
                                   Width="100"
                                   Height="100"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                    <Image.Clip>
                                        <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                                    </Image.Clip>
                                </Image>
                                <TextBlock Text="{Binding Name}"
                                           HorizontalAlignment="Center"
                                           Margin="0,10,0,0"
                                           FontWeight="Bold"/>
                            </StackPanel>
                            
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
    </ScrollViewer> 
    </Border>
    
</Page>
